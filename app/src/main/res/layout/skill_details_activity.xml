<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/skill_details">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_20dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_30sp"/>

        <TextView
            android:id="@+id/vendor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:paddingRight="6dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_22sp"/>

        <View
            android:id="@+id/skill_details_spacer_one"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_50dp"
            android:layout_below="@id/vendor_name"/>

        <TextView
            android:id="@+id/short_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/skill_details_spacer_one"
            android:paddingRight="6dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_22sp"/>

        <View
            android:id="@+id/skill_details_spacer_two"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_50dp"
            android:layout_below="@id/short_desc"/>

        <TextView
            android:id="@+id/example_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/skill_details_spacer_two"
            android:text="@string/example_interactions"
            android:paddingRight="6dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_22sp"/>
        <LinearLayout
            android:id="@+id/examples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/example_header">

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>